{
  "resourceType": "StructureDefinition",
  "id": "ipa-patient",
  "url": "http://hl7.org/fhir/uv/ipa/StructureDefinition/ipa-patient",
  "name": "IPAPatient",
  "title": "IPA-Patient",
  "status": "active",
  "experimental": false,
  "date": "2022-08-02",
  "description": "Minimum expectations for a Patient resource when accessed via a International Patient Access API",
  "fhirVersion": "4.0.0",
  "kind": "resource",
  "abstract": false,
  "type": "Patient",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Patient",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Patient.identifier",
        "path": "Patient.identifier",
        "min": 1,
        "max": "*",
        "constraint": [
          {
            "key": "ipa-pat-1",
            "severity": "error",
            "human": "At least one of Patient.identifier.system or Patient.identifier.type or Patient.identifier.assigner SHALL be present",
            "expression": "system.exists() or type.exists() or assigner.exists()",
            "xpath": "f:system or f:type or f:assigner"
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Patient.identifier.value",
        "path": "Patient.identifier.value",
        "short": "The value that is unique within the system.",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Patient.active",
        "path": "Patient.active",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Patient.name",
        "path": "Patient.name",
        "min": 1,
        "max": "*",
        "constraint": [
          {
            "key": "ipa-pat-2",
            "severity": "error",
            "human": "Either at least one of Patient.name.given or Patient.name.family SHALL be present, or a Data Absent Reason Extension SHALL be present",
            "expression": "(family.exists() or given.exists()) xor extension.where(url='http://hl7.org/fhir/StructureDefinition/data-absent-reason').exists()",
            "xpath": "(/f:name/f:extension/@url='http://hl7.org/fhir/StructureDefinition/data-absent-reason' and not(/f:name/f:family or /f:name/f:given)) or (not(/f:name/f:extension/@url='http://hl7.org/fhir/StructureDefinition/data-absent-reason') and (/f:name/f:family or /f:name/f:given))"
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Patient.gender",
        "path": "Patient.gender",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Patient.birthDate",
        "path": "Patient.birthDate",
        "min": 0,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Patient.link",
        "path": "Patient.link",
        "min": 0,
        "max": "1",
        "mustSupport": true
      }
    ]
  }
}