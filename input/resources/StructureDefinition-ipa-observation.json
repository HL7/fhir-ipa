{
  "resourceType": "StructureDefinition",
  "url": "http://hl7.org/fhir/uv/ipa/StructureDefinition/ipa-observation",
  "version": "0.1.0",
  "name": "IPAObservation",
  "title": "IPA-Observation",
  "status": "draft",
  "experimental": false,
  "date": "2019-08-26T15:10:00+10:00",
  "description": "Minimum expectations for an Observation resource when accessed via an International Patient Access API",
  "fhirVersion": "4.0.0",
  "kind": "resource",
  "abstract": false,
  "type": "Observation",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Observation",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "path": "Observation",
        "constraint": [
          {
            "key": "ipa-obs-1",
            "severity": "error",
            "human": "If there is no component or related element then either a value[x] or a data absent reason must be present",
            "expression": "(component.empty() and related.empty()) implies (dataAbsentReason or value)",
            "xpath": "exists(f:component) or exists(f:related) or exists(f:*[starts-with(local-name(.), 'value)]) or exists(f:dataAbsentReason)"
          }
        ]
      },
      {
        "path": "Observation.status",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "path": "Observation.category",
        "min": 1,
        "max": "*",
        "mustSupport": true
      },
      {
        "path": "Observation.code",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "path": "Observation.subject",
        "min": 1,
        "max": "1",
        "type": [
          {
            "code": "Reference",
            "targetProfile": [
              "http://hl7.org/fhir/uv/ipa/StructureDefinition/ipa-patient"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "path": "Observation.effective[x]",
        "min": 0,
        "max": "1",
        "mustSupport": true
      },
      {
        "path": "Observation.value[x]",
        "mustSupport": true
      },
      {
        "path": "Observation.dataAbsentReason",
        "mustSupport": true
      }
    ]
  }
}